<Window x:Class="BoMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoMonitor"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Bo Monitor"
        Height="300"
        Width="400"
        Icon="pack://application:,,,/config/icon.ico"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
    <Border x:Name="RootBorder"
            Background="#FFFFFFFF"
            CornerRadius="8"
            SnapsToDevicePixels="True"
            MouseLeftButtonDown="WindowDrag_MouseLeftButtonDown">
        <Grid ClipToBounds="True">
            <tb:TaskbarIcon x:Name="TrayIcon"
                            IconSource="pack://application:,,,/config/icon.ico"
                            ToolTipText="Bo Monitor"
                            TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu x:Name="TrayContextMenu">
                        <MenuItem x:Name="MonitoringMenuItem"
                                  Header="Monitoring"/>
                        <MenuItem x:Name="ItemsMenuItem"
                                  Header="Items"/>
                        <MenuItem x:Name="UpdateMenuItem"
                                  Header="Update">
                            <MenuItem Header="1s"
                                      Tag="1"
                                      Click="TrayUpdateInterval_Click"/>
                            <MenuItem Header="2s"
                                      Tag="2"
                                      Click="TrayUpdateInterval_Click"/>
                            <MenuItem Header="5s"
                                      Tag="5"
                                      Click="TrayUpdateInterval_Click"/>
                            <MenuItem Header="10s"
                                      Tag="10"
                                      Click="TrayUpdateInterval_Click"/>
                            <MenuItem Header="30s"
                                      Tag="30"
                                      Click="TrayUpdateInterval_Click"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem x:Name="AutoLaunchMenuItem"
                                  Header="Auto Launch"
                                  IsCheckable="True"
                                  Click="TrayAutoLaunch_Click"/>
                        <MenuItem x:Name="TopMenuItem"
                                  Header="Pin Top"
                                  IsCheckable="True"
                                  Click="TrayTop_Click"/>
                        <MenuItem x:Name="MousePassthroughMenuItem"
                                  Header="Pass Through"
                                  IsCheckable="True"
                                  Click="TrayMousePassthrough_Click"/>
                        <Separator/>
                        <MenuItem Header="Hide"
                                  Click="TrayHide_Click"/>
                        <MenuItem Header="Exit"
                                  Click="TrayExit_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MonitorItemsControl"
                              Margin="12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="1"
                                  MouseLeftButtonDown="MonitorItem_MouseLeftButtonDown">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Value}"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
